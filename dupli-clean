#!/usr/bin/make -f

MAKEFLAGS += -Rrs
SHELL != which bash
.ONESHELL:
.DEFAULT_GOAL := all

self    := $(lastword $(MAKEFILE_LIST))
$(self) := $(basename $(self))
dupli   := $(notdir $(self))
$(self):;

dir   := /var/local/duplicity
log   := $(dir)/log/$(dupli)
lock  := $(dir)/lock/$(dupli)

# Weeks
small ?= $(or $(weeks),3)
medium ?= $(or $(weeks),3)
big ?= $(or $(weeks),3)

sleep ?= 2

define loop
set -eo pipefail;
loop () {
    local set="$$1";
    local weeks="$$2";
    while true; do
        local log=$(log)/$$set/$$(date +%s);
        echo $$log;
        date > $$log;
        dupli sets list $$set | $(flock.opt) xargs -i dupli files $(dry.opt) del weeks=$$weeks set={} >> $$log ;
        date >> $$log;
        sleep $(sleep)h;
done;
}
export -f loop;
loop $@ $($@);
endef

sets := small medium big all
$(sets): % : | $(log)/%; $(loop)
.PHONY: $(sets)

$(sets:%=$(log)/%):; mkdir -p $@

flock.opt := flock $(lock)
noflock   := flock.opt  :=
dry       := dry.opt    := dry

opts := dry noflock

$(opts):; @: $(eval $($@))
.PHONY : $(opts)
